    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'fsy-ai-chat'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fsy-ai-chat",
                    "--package=fsy-ai-chat"
                ],
                "filter": {
                    "name": "fsy-ai-chat",
                    "kind": "bin"
                }
            },
            "args": [
                "--config=config.toml",
                "--mode=web",
                "--port=3001"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'fsy-ai-chat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=fsy-ai-chat",
                    "--package=fsy-ai-chat"
                ],
                "filter": {
                    "name": "fsy-ai-chat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}